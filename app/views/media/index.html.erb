<p id="notice"><%= notice %></p>

<h1>Listing Media</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content type</th>
      <th>Content</th>
      <th>Image</th>
      <th>Slug</th>
      <th>Share</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @media.each do |medium| %>
      <tr>
        <td><%= medium.name %></td>
        <td><%= medium.content_type %></td>
        <td><%= medium.content %></td>
        <td><%= medium.image %></td>
        <td><%= medium.slug %></td>
        <td><%= medium.share %></td>
        <td><%= link_to 'Show', medium %></td>
        <td><%= link_to 'Edit', edit_medium_path(medium) %></td>
        <td><%= link_to 'Destroy', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

